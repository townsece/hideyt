{
  "manifest_version": 2,
  "version": "0.5.0",
  "name": "hideyt",
  "content_scripts": [
    {
      "matches": [
        "*://youtube.com/*",
        "*://*.youtube.com/*"
      ],
      "js": ["hideyt.js"]
    }
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "options_ui": {
    "page": "options/options.html"
  },
  "permissions": ["storage"],
  "browser_action": {
    "default_icon": {
      "16": "icons/new16.svg",
      "32": "icons/new32.svg"
    },
    "default_title": "hideyt"
  }
}